<%= form_with(model: category, local: true) do |form| %>
  <% content_for :before do %>
    <% if category.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <p><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</p>

        <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <% content_for :card_body do %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :slug %>
      <%= form.text_field :slug, class: 'form-control' %>
    </div>
  <% end %>

  <%# Trick for prepending (instead of appending) with content_for %>
  <% content_for :card_footer, flush: true do %>
    <%= form.submit class: 'btn btn-primary' %>
    <%= content_for :card_footer %>
  <% end %>

  <%= render template: 'layouts/_card' %>
<% end %>
